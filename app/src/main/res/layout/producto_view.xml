<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/caramelfrap"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aquí va la descripción"
            android:fontFamily="sans-serif-light"
            android:textColor="#262525"
            android:textSize="8sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="$5"
        android:textSize="19sp"
        android:textColor="#9E2E81"/>


</LinearLayout>